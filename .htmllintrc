{
	// names of npm modules to load into htmllint
	"plugins": [],

	// TODO: export htmllint's default cfg
	"head-req-title": true,
	"title-no-dup": true,
	"href-style": "relative",

	"attr-name-style": "dash",
	"attr-no-dup": true,
	"attr-no-unsafe-char": true,
	"attr-quote-style": "double",
	"attr-req-value": false,
	// Only for EJS templating.
	"attr-name-ignore-regex": "(appName|%)",

	"tag-bans": null,
	"tag-close": true,
	"tag-name-lowercase": true,

	"id-class-style": "dash",
	"class-style": "dash",
	"class-no-dup": true,

	"indent-style": "tabs",
	"indent-width": false,
	"line-end-style": "crlf"
}
